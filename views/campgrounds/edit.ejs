<%- include ("../partials/header") %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Edit <%= campground.name %></h1>	
		</div>
		<div class="col-10 col-sm-8 col-md-6 col-lg-4">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Title</label>
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<label>Price</label>
					<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01">
				</div>
				<div class="form-group">
					<label>Image</label>
					<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<label>Campground Description</label>
					<!-- <textarea name="campground[description]" required><%= campground.description %></textarea> -->
					<input class="form-control" type="text" name="description" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>				
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>
<%- include ("../partials/footer") %>